<h5 class="trip-headline"><%= t('expenses') %></h5>

<div>
  Total: <%= @total %>
</div>

<div>
  <% @participants.each do |participant| %>
      <ul>
        <li>
          <%= participant.get_user_full_name %> <%= participant.compute_user_balance(@trip, @total) %>
        </li>
      </ul>
  <% end %>

  <% @expenses.each do |key, value| %>
      <ul>
        <li>
          <%= key.get_user_full_name %> owes
          <% value.each do |bail| %>
            <%= bail.first.get_user_full_name %>
            <%= bail.last %>
          <% end %>
        </li>
      </ul>
  <% end %>

</div>
