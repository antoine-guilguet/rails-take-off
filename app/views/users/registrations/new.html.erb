<div class="container">
  <div class="row">
    <div class="col l6 offset-l3 m8 offset-m2 s12 ">
      <div class="form-container">
        <div class="form-header">
          <h3><%= t('sign_up') %></h3>
        </div>
        <div class="form-body">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= f.error_notification %>
              <div class="form-inputs">
                <%= f.input :first_name, required: true %>
                <%= f.input :last_name, required: true %>
                <%= f.input :email, required: true, autofocus: true, input_html: { value: @email || "your.email@takeoff.com"} %>
                <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
                <%= f.input :password_confirmation, required: true %>
                <% if @token != nil %>
                    <%= hidden_field_tag :invite_token, @token %>
                <% end %>
              </div>

              <div class="form-actions">
                <%= link_to t('back'), root_path, class: "btn" %>
                <%= f.button :submit, "Sign up" %>
              </div>
          <% end %>
          <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>