<div class="container">
  <div class="row">
    <div class="col l10 offset-l1 s12 ">
      <div class="survey-container">
        <div class="survey-header">
          <h3><%= @trip.name %>'s survey</h3>
        </div>
        <div class="survey-body">
          <table>
            <thead>
              <tr>
                <th>Vote</th>
                <th>Number of votes</th>
                <th>Start Date</th>
                <th>End Date</th>
              </tr>
            </thead>
            <tbody>
              <% @survey_dates.each do |survey_date| %>
                <tr>
                  <th>
                    <%= link_to 'Vote', vote_survey_path(@survey, survey_date_id: survey_date.id), class:"btn", remote: true %>
                  </th>
                  <th id="survey_date_<%= survey_date.id %>">
                    <%= survey_date.votes_for.size %>
                  </th>
                  <th>
                    <%= l(survey_date.start_date, format: :short) %>
                  </th>
                  <th>
                    <%= l(survey_date.end_date, format: :short) %>
                  </th>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<%= link_to t('back'), trips_path, class: "btn" %>



<%= content_for :js do %>
    <%= javascript_tag do %>

    <% end %>
<% end %>